{
  "features": {
    "edit_prediction_provider": "zed"
  },

  "vim_mode": true,
  "ui_font_size": 16,

  "buffer_font_size": 15,
  "buffer_font_family": "MonoLisa",

  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ros√© Pine"
  },

  "tab_bar": {
    "show": false
  },

  "scrollbar": {
    "show": "never"
  },

  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "agent_review": false,
    "code_actions": false
  },

  "status_bar": {},

  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "terminal": {
    "shell": {
      "program": "fish"
    }
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "indent_guides": {
    "enabled": false
  }
}
