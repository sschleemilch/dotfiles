{
  "layer": "top",
  "position": "top",
  "mode": "dock",
  "spacing": 12,
  "exclusive": true,
  "gtk-layer-shell": true,
{{- if eq .chezmoi.hostname "desos" }}
  "output": "DP-1",
{{- else if eq .chezmoi.hostname "ladon" -}}
  "output": "eDP-1",
{{- end }}
  "modules-left": [
    "cpu",
    "memory",
    "disk",
    "custom/updates"
  ],
  "modules-center": [
  ],
  "modules-right": [
{{- if eq .chezmoi.hostname "ladon" -}}
    "backlight",
{{- end }}
    "wireplumber",
    "network",
{{- if eq .chezmoi.hostname "ladon" -}}
    "battery",
{{- end }}
    "clock"
  ],
  "cpu": {
{{- if eq .chezmoi.hostname "desos" }}
    "format": "пТЉ  {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9} {usage}%",
{{- else if eq .chezmoi.hostname "ladon" -}}
    "format": "пТЉ  {icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7} {usage}%",
{{- end }}
    "interval": 2,
    "format-icons": [
