{
  "layer": "top",
  "position": "top",
  "mode": "dock",
  "exclusive": true,
  "gtk-layer-shell": true,
{{- if eq .chezmoi.hostname "desos" }}
  "output": "DP-1",
{{- else if eq .chezmoi.hostname "ladon" -}}
  "output": "eDP-1",
{{- end }}
  "modules-left": [
    "group/cpu-modules",
    "group/memory-modules",
    "group/disk-modules",
    "group/updates-modules"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
{{- if eq .chezmoi.hostname "ladon" -}}
    "group/backlight-modules",
{{- end }}
    "group/wireplumber-modules",
    "group/network-modules",
{{- if eq .chezmoi.hostname "ladon" -}}
    "group/battery-modules",
{{- end }}
    "clock"
  ],
  "group/cpu-modules": {
    "orientation": "inherit",
    "modules": [
      "cpu#icon",
      "cpu#content"
    ]
  },
  "group/memory-modules": {
    "orientation": "inherit",
    "modules": [
      "memory#icon",
      "memory#content"
    ]
  },
  "group/disk-modules": {
    "orientation": "inherit",
    "modules": [
      "disk#icon",
      "disk#content"
    ]
  },
  "group/wireplumber-modules": {
    "orientation": "inherit",
    "modules": [
      "wireplumber#icon",
      "wireplumber#content"
    ]
  },
  "group/battery-modules": {
    "orientation": "inherit",
    "modules": [
      "battery#icon",
      "battery#content"
    ]
  },
  "group/updates-modules": {
    "orientation": "inherit",
    "modules": [
      "custom/updates-icon",
      "custom/updates-content"
    ]
  },
  "group/network-modules": {
    "orientation": "inherit",
    "modules": [
      "network#icon",
      "network#content"
    ]
  },
  "group/backlight-modules": {
    "orientation": "inherit",
    "modules": [
      "backlight#icon",
      "backlight#content"
    ]
  },
  "battery#icon": {
